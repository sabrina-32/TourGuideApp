    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="182dp"
        android:layout_height="167dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/tour_guide_logo" />

    <Button
        android:id="@+id/take_a_tour_Homepage_button"
        android:layout_width="327dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:background="@drawable/homepage_button"
        android:fontFamily="@font/comfortaa_regular"
        android:padding="2dp"
        android:text="Take a Tour"
        android:textAllCaps="false"
        android:textColor="#01579B"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Login_Homepage_button"
        android:layout_width="327dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="162dp"
        android:background="@drawable/homepage_button"
        android:fontFamily="@font/comfortaa_regular"
        android:padding="2dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#01579B"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Signup_Homepage_button"
        android:layout_width="327dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/homepage_button"
        android:fontFamily="@font/comfortaa_regular"
        android:padding="2dp"
        android:text="SignUp"
        android:textAllCaps="false"
        android:textColor="#01579B"
        android:textSize="30sp"
        android:textStyle="bold" />

 <TextView
     android:id="@+id/or_textview"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     android:layout_centerHorizontal="true"
     android:layout_marginBottom="117dp"
     android:fontFamily="@font/comfortaa_regular"
     android:text="OR"
     android:textColor="#01579B"
     android:textSize="25sp"
     android:textStyle="bold" />
</RelativeLayout>